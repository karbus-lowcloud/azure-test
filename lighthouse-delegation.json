{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "mspOfferName": { "type": "string", "defaultValue": "lowcloud-test" },
    "mspOfferDescription": { "type": "string", "defaultValue": "" },
    "managedByTenantId": { "type": "string" },
    "authorizations": {
      "type": "array",
      "metadata": { "description": "Array of {principalId, principalIdDisplayName, roleDefinitionId}" }
    }
  },
  "variables": {
    "regDefName": "[guid(subscription().subscriptionId, parameters('mspOfferName'))]",
    "regAssignName": "[guid(subscription().subscriptionId, variables('regDefName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.ManagedServices/registrationDefinitions",
      "apiVersion": "2022-10-01",
      "name": "[variables('regDefName')]",
      "properties": {
        "registrationDefinitionName": "[parameters('mspOfferName')]",
        "description": "[parameters('mspOfferDescription')]",
        "managedByTenantId": "[parameters('managedByTenantId')]",
        "authorizations": "[parameters('authorizations')]"
      }
    },
    {
      "type": "Microsoft.ManagedServices/registrationAssignments",
      "apiVersion": "2022-10-01",
      "name": "[variables('regAssignName')]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedServices/registrationDefinitions', variables('regDefName'))]"
      ],
      "properties": {
        "registrationDefinitionId": "[resourceId('Microsoft.ManagedServices/registrationDefinitions', variables('regDefName'))]"
      }
    }
  ]
}
